{
  "extends": ["react-app", "plugin:prettier/recommended", "plugin:react-hooks/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 2,
        "printWidth": 100,
        "semicolons": true,
        "quoteProps": "as-needed",
        "jsxSingleQuote": false,
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "arrowParens": "always",
        "endOfLine": "lf"
      }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error"
  }
}
